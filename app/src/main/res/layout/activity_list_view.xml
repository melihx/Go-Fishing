<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/listViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name" />

    <TextView
        android:id="@+id/listViewDamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dam Name" />

    <TextView
        android:id="@+id/listViewFishVariety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fish Variety" />

    <TextView
        android:id="@+id/listViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/listViewDamPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dam Phone Number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/listViewFishNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Caught Fish Number"
        android:visibility="invisible" />

</LinearLayout>